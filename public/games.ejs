<!DOCTYPE html>
<html lang="en" class="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Pluto Games</title>
</head>
<body class="bg-gray-800 text-white">
    <div class="h-screen flex justify-center items-center">
        <div class="bg-gradient-to-r from-gray-800 to-gray-900 text-white p-8 rounded-lg shadow-lg transform hover:scale-105 transition duration-300">
            <h1 class="text-3xl text-center font-extrabold mb-4 inline-block text-transparent bg-clip-text bg-gradient-to-r from-orange-500 to-orange-300">Pluto Games</h1>
            <form class="flex justify-center space-x-4">
                <select name="selection" id="selection" class="bg-gradient-to-r from-gray-700 to-gray-900 text-white p-2 rounded-lg shadow-md border-2 border-gradient border-gray-900 focus:outline-none focus:border-orange-500">
                  <% games.forEach(item => { %>
                    <option value="<%= item %>"><%= item %></option>
                    <% }); %>
                </select>
            </form>
        </div>
    </div>
    <script>
        const selectionDropdown = document.getElementById('selection');

        selectionDropdown.addEventListener('change', () => {
            const selectedValue = selectionDropdown.value;
            window.location.href = `/play/${selectedValue}`;
        });
    </script>
</body>
</html>
